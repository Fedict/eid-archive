#!/bin/sh

set -e

case "$1" in
	purge)
		if [ -x /usr/bin/ucf ]
		then
			ucf --purge /etc/apt/sources.list.d/eid.list
                        ucf --purge /etc/apt/sources.list.d/eid.sources
		fi
		rm -f /etc/apt/sources.list.d/eid.list
		rm -f /etc/apt/trusted.gpg.d/eid-archive*
                rm -f /etc/apt/sources.list.d/eid.sources
	;;
esac

#DEBHELPER#
